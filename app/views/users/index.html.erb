<% provide(:title, 'Bài viết') %>
<% if notice.nil? == false %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="container-fluid mt-5 mb-5">
    <div class="row mt-3 mb-3 ms-5">
        <%= link_to "Trang chủ", root_path, class: "text-decoration-none", style: "display: contents" %> > Bài viết 
    </div>

  <h1 class="text-center mt-3 mb-3">Danh sách người dùng</h1>

<div class="row mb-3">
  <div class="container-fluid pt-5 pb-5 bg-light">
    <div class="row">
        <div class="col-xl-3 d-none d-xl-block d-xxl-none">
        
        </div>
        <div class="col-xl-6">
          <div class="container">

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tên</th>
                        <th scope="col">Email</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>

                <% @users.each do |user| %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td>
                            <%= link_to "show", users_path(user) %>
                        </td>
                    </tr>
                <% end %>

                </tbody>
            </table>

          </div>
        </div>

        <div class="col-xl-3 d-none d-xl-block d-xxl-none">
          
        </div>
    </div>
  </div>
</div>