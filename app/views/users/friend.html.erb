<% provide(:title, 'Bạn bè') %>
<% if notice.nil? == false %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<% if @friends.size > 0 %>
  <div class="container-fluid mt-5 mb-5">
    <div class="row mt-3 mb-3 ms-5">
      <%= link_to "Trang chủ", root_path, class: "text-decoration-none", style: "display: contents" %> 
      > Bạn bè
    </div>

    <div class="row">
      <div class="mt-3 mb-3 d-flex justify-content-center align-items-center">
        <div><%= gravatar_for current_user %></div>
        <div class="ms-2">
          <div class="h4"><%= current_user.name %></div>
            <div class="text-secondary h6"><%= current_user.friend.count %> bạn bè </div>
        </div>
      </div>
    </div>

    <div class="row">
    <div class="h2 text-secondary text-center">Danh sách bạn bè </div>
    <% @friends.each do |friend| %>
      <div class="col-xl-4 col-md-6 col-sm-12">
        <div class="mt-3 mb-3 d-flex justify-content-center align-items-center">
          <div><%= gravatar_for friend %></div>
          <div class="ms-2">
            <div class="h4"><%= friend.name %></div>
            <div class="friend-action">
              <%= link_to "View profile", user_path(friend), class: "text-decoration-none btn btn-success" %>
              <button class="btn btn-danger">Hủy kết bạn</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
<% else %>
  <h1>Bạn chưa có bạn</h1>
<% end %>
