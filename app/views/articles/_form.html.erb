<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <% if @article.errors.any? %>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_for @article do |f| %>
      <%= f.hidden_field :post_id, :value => 1 %>
      <p class="mb-3">
        <%= f.label :title, class: "form-label" %><br/>
        <%= f.text_field :title, class: "form-control" %>
      </p>
      <p class="mb-3">
        <%= f.label :description, class: "form-label" %><br/>
        <%= f.text_area :description, class: "form-control", :cols => 30, :rows => 10 %>
      </p>
      <p class="mb-3">
        <%= f.label :category_id, class: "form-label" %><br/>
        <%= f.select(:category_id, options_from_collection_for_select(Category.all, :id, :name), {}, {:class =>"form-control"})  %>
      </p>
      <p class="mb-3 text-center">
        <%= f.submit class: "btn btn-success" %>
      </p>
    <% end %>
  </div>
  <div class="col-4"></div>
</div>